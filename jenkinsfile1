//scripted

//declarative
pipeline {
  agent {
    docker {
      image 'maven:3.6.3'
    }
  }
  
  stages{
    stage("Build"){
      steps {
        sh "mvn --version"
        echo "Build"
       }
    }
  
    stage("Test"){
      steps{
        echo "Test"
      }
    }  
  
    stage("Staging"){
      steps{
        echo "Staging"
      }
    }
  }
  
  post{
    always{
      echo "Im awesome"
    }
    success {
      echo "I'm run when you are success"
    }
    
    failure{
      echo "I'm run when there is failure"
    }
  }
}
